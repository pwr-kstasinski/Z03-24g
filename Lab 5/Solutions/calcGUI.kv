<CustButton@Button>:
    font_size: 32

<DigitButton@Button>:
    font_size: 32
    background_color: 65/255,105/255,225/255, 1

<SpecialButton@Button>:
    font_size: 32
    background_color: (255,255,255,1)

<CalcGridLayout>:
    id: calculator
    display: entry
    rows: 7
    padding: 10
    spacing: 10



    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: False
            text:""
            readonly: True

    BoxLayout:
        spacing: 10
        DigitButton:
            text: "7"
            on_press: entry.text += self.text
        DigitButton:
            text: "8"
            on_press: entry.text += self.text
        DigitButton:
            text: "9"
            on_press: entry.text += self.text
        CustButton:
            text: "("
            on_press: entry.text += self.text +" "
        CustButton:
            text: ")"
            on_press: entry.text += " " + self.text



    BoxLayout:
        spacing: 10
        DigitButton:
            text: "4"
            on_press: entry.text += self.text
        DigitButton:
            text: "5"
            on_press: entry.text += self.text
        DigitButton:
            text: "6"
            on_press: entry.text += self.text
        CustButton:
            text: "+"
            on_press: entry.text += " " + self.text + " "
        CustButton:
            text: "-"
            on_press: entry.text += " " + self.text + " "

    BoxLayout:
        spacing: 10
        DigitButton:
            text: "1"
            on_press: entry.text += self.text
        DigitButton:
            text: "2"
            on_press: entry.text += self.text
        DigitButton:
            text: "3"
            on_press: entry.text += self.text
        CustButton:
            text: "*"
            on_press: entry.text += " " + self.text + " "
        CustButton:
            text: "sqrt"
            on_press: entry.text += " " + self.text + " "

    BoxLayout:
        spacing: 10
        SpecialButton:
            text: "AC"
            color: 1,0,0,1
            on_press: entry.text = ""
        DigitButton:
            text: "0"
            on_press: entry.text += self.text
        CustButton:
            text: "."
            on_press: entry.text += self.text
        CustButton:
            text: "/"
            on_press: entry.text += " " + self.text + " "
        CustButton:
            text: "log"
            on_press: entry.text += " " + self.text + " "
    BoxLayout:
        spacing: 10
        BoxLayout:
            spacing: 10
            SpecialButton:
                text: "="
                color: 1,0,0,1
                on_press: calculator.calculate(entry.text)
                size_hint: 0.65, 1
            CustButton:
                text: "mod"
                on_press: entry.text +=" "+ self.text + " "
                size_hint: 0.3, 1
            CustButton:
                text: "^"
                on_press: entry.text +=" " + self.text + " "
                size_hint: 0.3, 1
        BoxLayout:
            spacing: 10
            size_hint: 0.225, 1
            CustButton:
                text: "abs"
                on_press: entry.text += " " + self.text + " "
